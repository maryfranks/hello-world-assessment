<h1>Hello World!</h1>

<% if current_user %>
<h3>How are you today <%= current_user.username %>?</h3>
  <%= render 'new_post_form', post: @post %>

  <div id="all-posts">
    <% @posts.each do |post| %>
      <div class="post-and-replies">
        <%= link_to 'View Post', post_path(post.id) %>
        <p> <%= post.text %> (-<%= post.user.username %>)</p>

      <%= render 'replies/display_replies', post: post %>
    </div>
      <% end %>
  </div>

<% else %>
    <div>
      <h2 id="log-in"><%= link_to 'Log in', new_session_path %></h2>
      <h2 id="sign-up">Or <%= link_to 'Sign Up', new_user_path %></h2>
    </div>

<% end %>

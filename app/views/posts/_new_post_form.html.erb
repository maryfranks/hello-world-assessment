<%= form_for post, url: {controller: "posts", action: "create"}, :html=> {id: 'submit-post'} do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="add-post">
    <p><label>What do you have to say?</label></p>
    <p><%= f.text_area :text %></p>
    <label>City</label>
    <%= f.search_field :city %>
    <button type="button" id="city-info">Get City Info</button>
    <div hidden>
      <%= f.text_field :lat %>
      <%= f.text_field :long %>
      <%= f.text_field :weather %>
    </div>
  </div>
  <div>
    <div class="submit-the-post"><input id="submit-post-button" disabled="true" type="submit" value="Done"></div>
  </div>
<% end %>
